{
  "id": "cluster-001",
  "name": "Create a specific named cluster",
  "description": "Policy that grants a user the ability to create a ROSA cluster with a specific name.",
  "policyFile": "create-named-cluster.cedar",
  "testCases": [
    {
      "description": "User can create the specified cluster",
      "request": {
        "action": "CreateCluster",
        "resource": "arn:aws:rosa:us-west-2:111122223333:cluster/my-cluster"
      },
      "expectedResult": "ALLOW"
    },
    {
      "description": "User cannot create a cluster with a different name",
      "request": {
        "action": "CreateCluster",
        "resource": "arn:aws:rosa:us-west-2:111122223333:cluster/other-cluster"
      },
      "expectedResult": "DENY"
    },
    {
      "description": "User cannot delete the cluster",
      "request": {
        "action": "DeleteCluster",
        "resource": "arn:aws:rosa:us-west-2:111122223333:cluster/my-cluster"
      },
      "expectedResult": "DENY"
    }
  ],
  "notes": "This is the minimum permissions for creating a single cluster."
}
