{
  "id": "cluster-002",
  "name": "Full ROSA cluster administrator",
  "description": "Policy that grants a user/group/role the ability to fully manage all ROSA clusters in the account. This provides complete access to all ROSA operations.",
  "policyFile": "full-cluster-admin.cedar",
  "testCases": [
    {
      "description": "User can create any cluster",
      "request": {
        "action": "CreateCluster",
        "resource": "arn:aws:rosa:us-west-2:111122223333:cluster/any-cluster"
      },
      "expectedResult": "ALLOW"
    },
    {
      "description": "User can delete any cluster",
      "request": {
        "action": "DeleteCluster",
        "resource": "arn:aws:rosa:us-east-1:111122223333:cluster/prod-cluster"
      },
      "expectedResult": "ALLOW"
    },
    {
      "description": "User can update cluster config",
      "request": {
        "action": "UpdateClusterConfig",
        "resource": "arn:aws:rosa:us-west-2:111122223333:cluster/my-cluster"
      },
      "expectedResult": "ALLOW"
    },
    {
      "description": "User can create node pools",
      "request": {
        "action": "CreateNodePool",
        "resource": "arn:aws:rosa:us-west-2:111122223333:cluster/my-cluster"
      },
      "expectedResult": "ALLOW"
    },
    {
      "description": "User can manage access entries",
      "request": {
        "action": "CreateAccessEntry",
        "resource": "arn:aws:rosa:us-west-2:111122223333:cluster/my-cluster"
      },
      "expectedResult": "ALLOW"
    }
  ],
  "notes": "This is the most permissive ROSA policy."
}
