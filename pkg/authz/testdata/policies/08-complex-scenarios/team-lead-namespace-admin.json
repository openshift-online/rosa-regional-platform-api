{
  "id": "complex-002",
  "name": "Team lead with namespace-level admin delegation",
  "description": "Policy that allows team leads to manage access entries for their team's namespace, but not cluster-wide access or admin policies.",
  "policyFile": "team-lead-namespace-admin.cedar",
  "testCases": [
    {
      "description": "Team alpha lead can create access entry for their team",
      "principal": {
        "tags": {
          "Team": "alpha"
        }
      },
      "request": {
        "action": "CreateAccessEntry",
        "resource": "arn:aws:rosa:us-west-2:111122223333:cluster/shared-cluster",
        "resourceTags": {
          "Team": "alpha"
        },
        "context": {
          "principalTags": {
            "Team": "alpha"
          }
        }
      },
      "expectedResult": "ALLOW"
    },
    {
      "description": "Team alpha lead can grant view access to team-alpha namespace",
      "principal": {
        "tags": {
          "Team": "alpha"
        }
      },
      "request": {
        "action": "UpdateAccessEntry",
        "resource": "arn:aws:rosa:us-west-2:111122223333:access-entry/shared-cluster/role/alpha-dev",
        "context": {
          "accessScope": "namespace",
          "namespaces": [
            "team-alpha"
          ],
          "allowedNamespaces": [
            "team-alpha"
          ],
          "policyArn": "arn:aws:rosa::aws:cluster-access-policy/ROSAViewPolicy",
          "principalTags": {
            "Team": "alpha"
          }
        },
        "resourceTags": {
          "Team": "alpha"
        }
      },
      "expectedResult": "ALLOW"
    },
    {
      "description": "Team alpha lead cannot grant access to team-beta namespace",
      "principal": {
        "tags": {
          "Team": "alpha"
        }
      },
      "request": {
        "action": "UpdateAccessEntry",
        "resource": "arn:aws:rosa:us-west-2:111122223333:access-entry/shared-cluster/role/alpha-dev",
        "context": {
          "accessScope": "namespace",
          "namespaces": [
            "team-beta"
          ],
          "allowedNamespaces": [
            "team-alpha"
          ],
          "policyArn": "arn:aws:rosa::aws:cluster-access-policy/ROSAViewPolicy",
          "principalTags": {
            "Team": "alpha"
          }
        },
        "resourceTags": {
          "Team": "alpha"
        }
      },
      "expectedResult": "DENY"
    },
    {
      "description": "Team alpha lead cannot grant cluster-wide access",
      "principal": {
        "tags": {
          "Team": "alpha"
        }
      },
      "request": {
        "action": "UpdateAccessEntry",
        "resource": "arn:aws:rosa:us-west-2:111122223333:access-entry/shared-cluster/role/alpha-dev",
        "context": {
          "accessScope": "cluster",
          "allowedNamespaces": [
            "team-alpha"
          ],
          "policyArn": "arn:aws:rosa::aws:cluster-access-policy/ROSAViewPolicy",
          "principalTags": {
            "Team": "alpha"
          }
        },
        "resourceTags": {
          "Team": "alpha"
        }
      },
      "expectedResult": "DENY"
    },
    {
      "description": "Team alpha lead cannot grant admin policy even to own namespace",
      "principal": {
        "tags": {
          "Team": "alpha"
        }
      },
      "request": {
        "action": "UpdateAccessEntry",
        "resource": "arn:aws:rosa:us-west-2:111122223333:access-entry/shared-cluster/role/alpha-dev",
        "context": {
          "accessScope": "namespace",
          "namespaces": [
            "team-alpha"
          ],
          "allowedNamespaces": [
            "team-alpha"
          ],
          "policyArn": "arn:aws:rosa::aws:cluster-access-policy/ROSAAdminPolicy",
          "principalTags": {
            "Team": "alpha"
          }
        },
        "resourceTags": {
          "Team": "alpha"
        }
      },
      "expectedResult": "DENY"
    },
    {
      "description": "Team alpha lead cannot delete team beta's access entry",
      "principal": {
        "tags": {
          "Team": "alpha"
        }
      },
      "request": {
        "action": "DeleteAccessEntry",
        "resource": "arn:aws:rosa:us-west-2:111122223333:access-entry/shared-cluster/role/beta-dev",
        "resourceTags": {
          "Team": "beta"
        },
        "context": {
          "principalTags": {
            "Team": "alpha"
          }
        }
      },
      "expectedResult": "DENY"
    }
  ],
  "notes": "This enables self-service access management at the team level while maintaining cluster-wide security. Team leads can onboard new team members without involving cluster admins."
}
